<h1>Notes</h1>
<table>
  <tr>
    <th>Author</th>
    <th>Body</th>
    <th>Posted</th>
  </tr>
  <% @notes.each do |note| %>
  <tr>
    <td><%= note.author.email %></td>
    <td><%= note.body %></td>
    <td><%= time_ago_in_words(note.created_at) %> ago</td>
    <% if note.author == current_user %>
      <td><%= button_to "Delete note", note_url(note), method: :delete %></td>
    <% end %>
  </tr>
  <% end %>
</table>
