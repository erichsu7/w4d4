<h1>Track "<%= @track.title %>" from <%= @album.name %></h1>

<h2>Lyrics</h2>
</br>
<%= ugly_lyrics(@track.lyrics) %>

<%= render "notes/note" %>
<%= render "notes/notes_form" %>

<%= button_to "Edit track", edit_track_url(@track), method: :get %>
<%= button_to "Delete track", track_url(@track), method: :delete %>
<%= button_to "Back to #{@album.name}", album_url(@album), method: :get %>
